#include <stdio.h>

int main()
{
    int cod1, qtd1, cod2, qtd2;
    double preco1, preco2;

    scanf("%d", &cod1);
    scanf("%d", &qtd1);
    scanf("%lf", &preco1);
    scanf("%d", &cod2);
    scanf("%d", &qtd2);
    scanf("%lf", &preco2);

    double precoFinal = (qtd1 * preco1) + (qtd2 * preco2);
    printf("VALOR A PAGAR: R$ %.2lf\n", precoFinal);
    
    return 0;
}
